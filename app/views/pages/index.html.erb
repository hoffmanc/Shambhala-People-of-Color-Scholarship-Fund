<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.title %></td>
    <td>
      <% unless @pages.first.position == page.position %> 
        <%= button_to "&uArr;", to_top_page_path(page) %> 
        <%= button_to "&uarr;", higher_page_path(page) %> 
      <% end %> 
    </td>
    <td>
      <% unless page.last? %> 
        <%= button_to "&darr;", lower_page_path(page) %> 
        <%= button_to "&dArr;", to_bottom_page_path(page) %> 
      <% end %>
    </td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>
