<h1>
  <%=h @page.title %>
</h1>

<p>
  <%= @page.content %>
</p>

<% if not @page.filename.nil? %>
<p>
  Related Content: <%= link_to @page.filename, @page.public_filename %>
</p>
<% end %>

<% if logged_in? && current_user.isadmin? %>
  <%= link_to 'Edit', edit_page_path(@page) %> |
  <%= link_to 'List', pages_path %>
<% end %>
